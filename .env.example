# CRM System Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME="CRM System"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://crm.yourdomain.com
APP_VERSION=1.0.0

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=changeme-very-long-secret-key-for-jwt-token-generation-with-256-bits
JWT_REFRESH_SECRET=changeme-very-long-refresh-secret-key-for-refresh-token-generation
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=crm_system
DB_USERNAME=crm_user
DB_PASSWORD=your_secure_database_password

# Timezone
TIMEZONE=UTC

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@crm.yourdomain.com
MAIL_FROM_NAME="CRM System"

# Cache Configuration (Redis - Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_URL=redis://127.0.0.1:6379

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
API_RATE_LIMIT=100
API_BURST_LIMIT=200

# Logging
LOG_LEVEL=info
LOG_CHANNEL=crm
LOG_PATH=/var/log/crm

# Third-party API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# File Storage (AWS S3 - Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=crm-storage

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ENABLE_MONITORING=true
ENABLE_HEALTH_CHECKS=true

# Performance Settings
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_DRIVER=sync
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

# Security Settings
SECURE_HEADERS=true
HTTPS_ONLY=true
CORS_ALLOWED_ORIGINS=https://crm.yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE_DATABASE="0 2 * * *"
BACKUP_SCHEDULE_FILES="0 3 * * 0"
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="The system is currently under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1