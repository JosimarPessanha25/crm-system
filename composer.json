{
    "name": "empresa/crm-system",
    "description": "Sistema CRM completo e simplificado para Render.com",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:$PORT -t public",
        "render-start": "php render-start.php && php -S 0.0.0.0:$PORT -t public",
        "test": "echo 'No tests configured'",
        "post-install-cmd": [
            "@php render-start.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}